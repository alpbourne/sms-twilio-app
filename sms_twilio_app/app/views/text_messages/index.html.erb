<br>
<h1>Your Chat</h1>
<br>

<div class="text-form">
  <p>Send a text message:</p>
  <%= form_for @text_message do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>
      <%= f.label :phone %><br>
      <%= f.text_field :phone %><br>
      <%= f.label :message %><br>
      <%= f.text_area :message %><br>
      <%= f.submit class:"btn btn-primary"%>
  <% end %>
</div>

<h3>Previous Text Messages:</h3>
  <div class="text-card">
    <% @text_messages.each do |text| %>
      <div class="text-container">
        <strong>To: <%=text.name%></strong><br>
        <div class="text-body"><%=text.message %></div>
        <br>
      </div>
      <br>
    <% end %>
  </div>
